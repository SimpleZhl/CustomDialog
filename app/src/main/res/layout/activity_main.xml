<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sty.custom.dialog.MainActivity">

    <Button
        android:text="@string/btn_alert_success"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:id="@+id/btn_success" />

    <Button
        android:text="@string/btn_alert_error"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_success"
        android:layout_alignLeft="@+id/btn_success"
        android:layout_alignStart="@+id/btn_success"
        android:layout_marginTop="61dp"
        android:id="@+id/btn_error" />

    <Button
        android:text="@string/btn_alert_exit"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_error"
        android:layout_alignLeft="@+id/btn_error"
        android:layout_alignStart="@+id/btn_error"
        android:layout_marginTop="61dp"
        android:id="@+id/btn_exit" />
</RelativeLayout>
